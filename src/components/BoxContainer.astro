---
export interface Props {
  el?: string;
  class?: string;
  [key: string]: any;
}

const { el: Element = 'div', class: className, ...props } = Astro.props;
---

<Element class:list={['boxContainer', className]} {...props}>
  <slot />
</Element>

<style>
  .boxContainer {
    background: #fff;
    padding: 16px;
    margin: 0 auto;
    border-radius: 8px;
    border: 1px solid rgb(228, 228, 231);
    box-shadow: rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0) 0px 0px 0px 0px, rgba(0, 0, 0, 0.05) 0px 1px 2px 0px;
  }
</style>
