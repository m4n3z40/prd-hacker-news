---
import slugify from 'slugify';
import StoriesRepository from '../repositories/Stories';
import MainLayout from '../layouts/main.astro';
import Error from '../components/Error.astro';
import PostList from '../components/PostList.astro';

const { db } = Astro.locals;
const storiesRepo = new StoriesRepository(db);
const page = parseInt(Astro.url.searchParams.get('page') || '1', 10);
const perPage = 30;
let comments:Story[] = [];

const totalCount = await storiesRepo.countAll({ type: 'comment' });

if (totalCount > 0) {
  comments = await storiesRepo.getAllComments({ page, perPage });
}

const flashErrorVote = Astro.cookies.get('flash_error_vote')?.value;
---
<MainLayout title="Product Hacker News | Most Recent Comments">
  {flashErrorVote && <Error>{flashErrorVote}</Error>}
  <PostList
    items={comments}
    page={page}
    perPage={perPage}
    totalCount={totalCount}
    buildPostSummaryProps={story => ({
        path: `/stories/${story.root_id}/${slugify(story.root_title, { lower: true, strict: true })}`,
        parentStoryID: story.parent_id,
        showText: true,
        showRootTitle: true,
    })}
  />
</MainLayout>
