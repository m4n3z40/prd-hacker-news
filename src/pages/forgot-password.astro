---
import MainLayout from '../layouts/main.astro';
import BoxContainer from '../components/BoxContainer.astro';
import Button from '../components/Button.astro';
---
<MainLayout title="Product Hacker News | Forfot Password">
    <BoxContainer el="section">
    <h1>Forgot Password</h1>
    <form action="/recover-password" method="POST">
      <div class="formField">
        <label for="username">username</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="formSubmit">
        <Button type="submit">send reset email</Button>
      </div>
    </form>
  </BoxContainer>
</MainLayout>

<style>
  section {
    margin: 0 auto;
    max-width: 350px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 4px;
    align-items: center;
  }

  .formField {
    display: flex;
    align-items: center;
    width: 100%;
  }

  .formSubmit {
    margin-top: 5px;
  }

  .formField > label {
    min-width: 25%;
  }

  .formField > input {
    flex: 1;
    font-size: 16px;
    max-width: 75%;
  }
</style>
